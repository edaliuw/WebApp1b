@model IEnumerable<bracketdocious.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamAID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamBID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamAScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamBScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamAID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamBID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamAScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamBScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BracketID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BracketID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BracketID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
